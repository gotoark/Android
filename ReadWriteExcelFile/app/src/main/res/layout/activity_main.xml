<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainlayout"
    android:layout_height="match_parent"
    tools:context="application.interlace.com.excelexample.MainActivity">
    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Random Telephone Directory Generator"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <EditText
        android:id="@+id/et_no_of_rows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter no of People"
        android:inputType="number"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.456"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <Button
        android:id="@+id/btn_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:background="@color/colorAccent"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_view"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.095"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/et_no_of_rows"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="8dp" />
    <Button
        android:id="@+id/btn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:background="@color/colorAccent"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/et_no_of_rows"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="31dp" />
    <TextView
        android:id="@+id/tv_tableTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Table Title"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_generate"
        android:layout_marginTop="94dp"
        app:layout_constraintTop_toBottomOf="@+id/et_no_of_rows"
        app:layout_constraintHorizontal_bias="0.509" />
    <ListView
        android:id="@+id/list_people"
        android:layout_width="376dp"
        android:layout_height="282dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_view"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"></ListView>


</android.support.constraint.ConstraintLayout>
