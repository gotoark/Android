<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:id="@+id/mainLayout"
    tools:context="application.interlace.com.pdfusingitext.MainActivity">
<TextView
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:text="Random Telephone Directory Generator"
    android:textAllCaps="true"
    android:textSize="18dp"
    android:textStyle="bold"
    android:textColor="@color/colorWhite"
    android:textAlignment="center"
    android:id="@+id/textView"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="90dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/et_no_of_rows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter no of People"
        android:inputType="number"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="86dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView" />
    <Button
        android:id="@+id/btn_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Generate"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:layout_marginTop="97dp"
        app:layout_constraintTop_toBottomOf="@+id/et_no_of_rows"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/et_no_of_rows"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_no_of_rows"
        app:layout_constraintHorizontal_bias="0.515" />
</android.support.constraint.ConstraintLayout>
